var SeeedLogo = new LCD.uint8Array(logoArr.length);
for (var x = 0; x < logoArr.length; x++)
	SeeedLogo.setitem(x, logoArr[x]);

// If you don't set the display to be white, the seeed logo will appear jagged
myLcd.setGrayLevel(12);
myLcd.draw(SeeedLogo, 96 * 96 / 8);

myLcd.setCursor(7, 1);
myLcd.write('lkeng.com');

function ShowTime(){
　var TimeNow=new Date();
　var h = (TimeNow.getHours()<10 ? '0' : '')+TimeNow.getHours();
  var m = (TimeNow.getMinutes()<10 ? '0' : '')+TimeNow.getMinutes();
  var s = (TimeNow.getSeconds()<10 ? '0' : '')+TimeNow.getSeconds(); 
　myLcd.setCursor(9, 1);
  myLcd.write(h+'h'+m+'m'+s+'s');
}

setInterval(ShowTime,1000);
